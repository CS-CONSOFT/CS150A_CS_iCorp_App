{
  "expo": {
    "name": "CS-iCorp App",
    "slug": "cs-icorp-app",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "0.3.5",
    "orientation": "portrait",
    "icon": "./assets/iconeLogoCS.png",
    "userInterfaceStyle": "light",
    "scheme": "br.com.csicorpnet.csicorp",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Usamos a câmera para escanear QR Codes e facilitar o login sem precisar digitar."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/iconeLogoCS.png",
        "backgroundColor": "#ffffff"
      },
      "package": "br.com.csicorpnet.csicorp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/iconeLogoCS.png"
    },
    "plugins": [
      "expo-build-properties",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Usamos a câmera para escanear QR Codes e facilitar o login sem precisar digitar."
        }
      ]
    ]
  }
}
